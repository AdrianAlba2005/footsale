<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el RadioButton estÃ¡ marcado (checked) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondaryContainer"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="?attr/colorPrimary"/>
        </shape>
    </item>
    <!-- Estado seleccionado (para compatibilidad o vistas seleccionables) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondaryContainer"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="?attr/colorPrimary"/>
        </shape>
    </item>
    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainer"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="?attr/colorOutline"/>
        </shape>
    </item>
</selector>
