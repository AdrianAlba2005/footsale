<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.FootSale" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.FootSale.NoActionBar" parent="Theme.FootSale">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FootSale.AppStarting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_round</item>
        <item name="postSplashScreenTheme">@style/Theme.FootSale</item>
    </style>

    <!-- NUEVO TEMA PARA ABOUT ACTIVITY -->
    <style name="Theme.FootSale.About" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Aquí puedes añadir personalizaciones si lo necesitas -->
    </style>

</resources>
