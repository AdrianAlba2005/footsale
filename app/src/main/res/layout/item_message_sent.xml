<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Cabecera de fecha -->
    <TextView
        android:id="@+id/text_date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/date_header_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#555555"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="13.12.2025"
        tools:visibility="visible"/>

    <!-- Contenedor del mensaje alineado a la derecha -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="@drawable/message_bubble_sent"
        android:maxWidth="280dp"> <!-- Limita el ancho máximo de la burbuja -->

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Este es un mensaje de prueba con texto largo para ver cómo se comporta."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/text_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#E0E0E0"
                android:layout_marginEnd="4dp"
                tools:text="10:00"/>

            <ImageView
                android:id="@+id/text_message_status"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:visibility="gone"
                tools:src="@drawable/ic_done_all_blue"
                tools:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
