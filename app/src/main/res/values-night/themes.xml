<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.FootSale" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/colorSecondary</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">@android:color/white</item>
        
        <!-- TabLayout colors -->
        <item name="tabStyle">@style/Widget.Material3.TabLayout</item>
        <item name="tabTextColor">#B3FFFFFF</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- ESTILO PARA EL MENÚ POPUP EN MODO OSCURO -->
        <item name="popupMenuStyle">@style/Widget.FootSale.PopupMenu</item>
    </style>

    <style name="Theme.FootSale.NoActionBar" parent="Theme.FootSale">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.FootSale.About" parent="Theme.FootSale">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.FootSale.AppStarting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_round</item>
        <item name="postSplashScreenTheme">@style/Theme.FootSale</item>
    </style>
    
    <!-- ESTILO PERSONALIZADO PARA EL MENÚ DESPLEGABLE (3 PUNTITOS) EN MODO OSCURO -->
    <style name="Widget.FootSale.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/white</item> <!-- Texto blanco en modo oscuro -->
        <item name="android:itemBackground">@android:color/black</item> <!-- Fondo negro en modo oscuro -->
        <item name="android:colorBackground">@android:color/black</item>
    </style>

</resources>
